# Portal Andorra - Variables d'Entorn de Producció
# Configura aquestes variables a Vercel Dashboard -> Settings -> Environment Variables

# 🔐 SEGURETAT I AUTENTICACIÓ
NEXTAUTH_URL=https://web-inky-alpha-95.vercel.app
NEXTAUTH_SECRET=super-secret-nextauth-key-2024-andorra-portal-secure

# 🏗️ VERCEL DEPLOYMENT
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here  
VERCEL_PROJECT_ID=your_vercel_project_id_here

# 🌐 APPLICATION
BASE_URL=https://web-inky-alpha-95.vercel.app
NODE_ENV=production

# 🔑 API KEYS & TOKENS
INGEST_TOKEN=super-secret-ingest-token-2024-portal-andorra
GITHUB_TOKEN=your_github_token_for_workflows

# 💾 BASE DE DADES POSTGRESQL
# Configura amb Vercel Postgres o la teva base de dades externa
DATABASE_URL=postgresql://username:password@host:port/database_name?schema=public

# 📧 EMAIL (Opcional per notificacions)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 🤖 AI SERVICES (Opcional per millores futures)
OPENAI_API_KEY=your_openai_key_optional
ANTHROPIC_API_KEY=your_anthropic_key_optional

# 🔍 ANALYTICS (Opcional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
POSTHOG_KEY=your_posthog_key_optional

# 🌍 INTERNACIONALITZACIÓ
DEFAULT_LOCALE=ca
SUPPORTED_LOCALES=ca,es,en,fr