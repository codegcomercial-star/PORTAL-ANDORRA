# Environment Configuration
NODE_ENV=development
APP_NAME=Portal Andorra
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_DEFAULT_LOCALE=ca
NEXT_PUBLIC_SUPPORTED_LOCALES=ca,es,en,fr
TZ=Europe/Andorra

# Auth
AUTH_SECRET=dev-secret-change-in-production
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Database
DATABASE_URL=postgresql://portal:portal@localhost:5432/portal

# Redis
REDIS_URL=redis://localhost:6379

# Search
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_API_KEY=masterKey

# Vector Database
DATABASE_URL_PGVECTOR=${DATABASE_URL}

# Payments (Stripe)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
PAYMENTS_MOCK=true

# External APIs (use mock if empty)
WEATHER_API_KEY=
FINANCE_API_KEY=
CRYPTO_API_KEY=
TWITTER_BEARER_TOKEN=

# Observability (optional)
SENTRY_DSN=
PLAUSIBLE_DOMAIN=localhost
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=localhost

# Feature Flags
FEATURE_RAG=true
FEATURE_MARKETPLACE=true
FEATURE_ANALYTICS=true
FEATURE_PAYMENTS=true

# Email (for magic links - optional, uses nodemailer in dev)
EMAIL_FROM=noreply@portalandorra.ad
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=
EMAIL_SERVER_PASSWORD=

# Workers
WORKER_CONCURRENCY=5
SCRAPING_DELAY_MS=1000
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
BCRYPT_ROUNDS=12
JWT_SECRET=dev-jwt-secret-change-in-production